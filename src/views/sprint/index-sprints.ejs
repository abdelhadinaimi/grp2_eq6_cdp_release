<%- include('../partials/head.ejs') %>
<%- include('../partials/project-header.ejs') %>

<% if (project.sprints.length > 0) { %>
<div class="row">
    <div class="col s12">
        <div class="row" style="margin: 10px 0 0 0">
            <div class="col s12 m10 offset-m1 l8 offset-l2">
                <div class="row valign-wrapper hide-on-small-only">
                    <div class="col m4 offset-m4 center-align">
                        <h5><%= pageTitle %></h5>
                    </div>
                    <% if (isPo || isPm) { %>
                    <div class="col m4 center-align">
                        <a class="btn green modal-trigger" href="/projects/<%= project.id %>/sprints/add">Créer un
                            sprint</a>
                    </div>
                    <% } %>
                </div>
                <div class="row valign-wrapper hide-on-med-and-up">
                    <div class="col m4 offset-m4 center-align">
                        <h5><%= pageTitle %></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m10 offset-m1 l8 offset-l2">
            <div class="row card-content">
                <ul class="collapsible">
                    <li class="collapsible-header">
                        <div class="col s1 center"><strong>Identifiant</strong></div>
                        <div class="col s8 center"><strong>Description</strong></div>
                        <div class="col s2 center"><strong>Date de début</strong></div>
                        <div class="col s2 center"><strong>Date de fin</strong></div>
                    </li>
                    <% project.sprints.forEach( sprint => { %>
                    <li <%= activeSprint ? (activeSprint.toString() === sprint._id.toString() ? "class=active" : "" ) : "" %>
                        id="<%=sprint._id%>">
                        <div class="collapsible-header line" tabindex="0">
                            <div class="col s1 center"><%= sprint.id %></div>
                            <div class="col s8 center truncate"><%= sprint.description %></div>
                            <div class="col s2 center"><%= sprint.startDate %></div>
                            <div class="col s2 center"><%= sprint.endDate %></div>
                        </div>
                        <div class="collapsible-body">
                            <div class="row center-align hide-on-med-and-up">
                                <div class="col s6">
                                    <a href="sprints/<%= sprint._id %>" class="btn-floating blue">
                                        <i class="material-icons">remove_red_eye</i>
                                    </a>
                                </div>
                                <% if (!project.deleteEdit) { %>
                                <div class="col s6">
                                    <a href="sprints/<%= sprint._id %>/edit" class="btn-floating white">
                                        <i class="material-icons black-text">edit</i>
                                    </a>
                                </div>
                                <div class="col s6">
                                    <a href="#deleteSprint" class="btn-floating red modal-trigger deleteButton"
                                        _id="<%= sprint._id %>">
                                        <i class="material-icons">delete</i>
                                    </a>
                                </div>
                                <% } %>
                            </div>
                            <div class="row">
                                <div class="col s12 m9 l10">
                                    <div class="row">
                                        <div class="row">
                                            <div class="col s12 m6 center-align">
                                                <b>Début du Sprint :</b> <%= sprint.startDate %>
                                            </div>
                                            <div class="col s12 m6 center-align">
                                                <b>Fin du Sprint :</b> <%= sprint.endDate %>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col s12 offset-m1 m10">
                                                <b>Description :</b><br />
                                                <%= sprint.description %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col s12 m3 l2 center-align hide-on-small-only">
                                    <div class="row">
                                        <a href="/projects/<%=project.id%>/sprints/<%= sprint._id %>" class="btn blue"
                                            style="width: 100%">Consulter</a>
                                    </div>
                                    <% if ((isPo || isPm) && !project.deleteEdit) { %>
                                    <div class="row">
                                        <a href="/projects/<%=project.id%>/sprints/<%= sprint._id %>/edit"
                                            class="btn white black-text" style="width: 100%">Modifier</a>
                                    </div>
                                    <div class="row">
                                        <a href="#deleteSprint" class="btn red modal-trigger deleteButton"
                                            _id="<%= sprint._id %>" style="width: 100%">Supprimer</a>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>
</div>
<% } else { %>
<div class="row valign-wrapper" style="margin-top: 10%">
    <div class="col s12 center-align">
        <div class="row">
            <h5>Il n'y a actuellement aucun sprint pour ce projet...</h5>
        </div>
        <% if (isPo || isPm) { %>
        <div class="row">
            <h6>Essayez de créer un premier sprint !</h6>
        </div>
        <div class="row">
            <a href="sprints/add" class="btn-flat green-text waves-effect">Créer un premier sprint</a>
        </div>
        <% } %>
    </div>
</div>
<% } %>

<%- include('../partials/scripts.ejs') %>
<%- include('../partials/toast.ejs') %>
<%- include('../partials/menu-connected-script.ejs') %>
<%- include('delete.ejs') %>

<script>
    $(document).ready(function () {
        $('.collapsible').collapsible();
    });
</script>

<%- include('../partials/foot.ejs') %>
