<%- include('../partials/head.ejs') %>
<%- include('../partials/project-header.ejs') %>
<% const states = ["TODO", "DOING", "DONE", "TOTEST", "TESTING", "TESTED"]; %>
<% if (project.tasks.length > 0) { %>
<div class="row">
  <div class="col s12">
    <div class="row" style="margin: 10px 0 0 0">
      <div class="col s12 m10 offset-m1 l8 offset-l2">
        <div class="row valign-wrapper hide-on-small-only">
          <div class="col m4 offset-m4 center-align">
            <h5><%=pageTitle%></h5>
          </div>
          <% if ((isPo || isPm) && !mine) { %>
          <div class="col m4 center-align">
            <a class="btn green modal-trigger" href="tasks/add">Créer une tâche</a>
          </div>
          <% } %>
        </div>
        <div class="row valign-wrapper hide-on-med-and-up">
          <div class="col s12 center-align">
            <h5><%=pageTitle%></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m10 offset-m1 l8 offset-l2">
      <div class="row">
        <% if (mine) { %>
          <a class="btn-small light-blue darken-1 right" href="/projects/<%= project.id %>/tasks">
            <i class="material-icons left">remove_red_eye</i>Toutes
          </a>
        <% } else { %>
          <a class="btn-small light-blue darken-1 right" href="/projects/<%= project.id %>/tasks/mine">
            <i class="material-icons left">remove_red_eye</i>Mes Tâches
          </a>
        <% } %>
      </div>
      <div class="row card-content">
        <ul class="collapsible">
          <li class="collapsible-header">
            <div class="col s8 center"><strong>Description</strong></div>
            <div class="col s1 center"><strong>Coût</strong></div>
            <div class="col s3 center"><strong>État</strong></div>
          </li>
          <% project.tasks.forEach(task => { %>
          <li id="<%=task._id%>">
            <div class="collapsible-header line" tabindex="0">
              <div class="col s8 center">
                <p class="description-header"><%=task.description %></p>
              </div>
              <div class="col s1 center"><%=task.cost%> j/h</div>
              <div class="col s3 center state"><%=task.state%></div>
            </div>
            <div class="collapsible-body">
              <div class="row center-align hide-on-med-and-up">
                <% if (!project.deleteEdit) { %>
                <div class="col s6">
                  <a href="tasks/<%=task._id%>/edit" class="btn-floating white">
                    <i class="material-icons black-text">edit</i>
                  </a>
                </div>
                <div class="col s6">
                  <a href="#deleteTask" class="btn-floating red modal-trigger deleteButton" _id="<%= task._id %>">
                    <i class="material-icons">delete</i>
                  </a>
                </div>
                <% } %>
              </div>
              <div class="row">
                <div class="col s12 m9 l10">
                  <div class="row">
                    <div class="row">
                      <div class="col s12 m8">
                        <b>Description : </b><%= task.description %>
                      </div>
                      <div class="col s12 m8">
                        <b><i>Definition of Done</i> : </b><%= task.definitionOfDone %>
                      </div>
                      <div class="col s12 m8">
                        <b>Issues : </b><% task.linkedIssues.forEach(issue => { %>
                          <a href="/projects/<%=project.id%>/issues/<%=issue._id%>"><%=issue.storyId%></a>
                        <%})%>
                      </div>
                      <div class="card-panel col s12 m8">
                        <b>Test : </b><%= task.testLink%>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col s12 m3 l2 center-align hide-on-small-only">
                    <% if ((isPo || isPm) && !project.deleteEdit) { %>
                  <div class="row">
                    <a href="tasks/<%=task._id%>/edit" class="btn white black-text" style="width: 100%">Modifier</a>
                  </div>
                  <div class="row">
                    <a href="#deleteTask" class="btn red modal-trigger deleteButton" _id="<%= task._id %>"
                      style="width: 100%">Supprimer</a>
                  </div>
                  <% } %>
                  <div class="row">
                      <select _id="<%=task._id%>" class="state-select">
                          <% for(let state of states) { %>
                            <%let selected = (state === task.state) ? "selected" : ""%>
                            <option  value="<%=state%>"<%=selected%>><%=state%></option>
                          <% } %>
                        </select>
                  </div>
                </div>
              </div>
            </div>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
</div>
<% } else { %>
  <% if (mine) { %>
    <div class="row valign-wrapper" style="margin-top: 10%">
      <div class="col s12 center-align">
        <div class="row">
          <h5>Vous n'avez actuellement aucune tâche qui vous est assignée pour ce projet...</h5>
          <a href="/projects/<%= project.id %>/tasks">Retour</a>
        </div>
      </div>
    </div>
  <% } else { %>
    <div class="row valign-wrapper" style="margin-top: 10%">
      <div class="col s12 center-align">
        <div class="row">
          <h5>Il n'y a actuellement aucune tâche pour ce projet...</h5>
        </div>
        <% if (isPo || isPm) { %>
          <div class="row">
            <h6>Essayez de créer une première tâche !</h6>
          </div>
          <div class="row">
            <a href="tasks/add" class="btn-flat green-text waves-effect">Créer une première tâche</a>
          </div>
        <% } %>
      </div>
    </div>
  <% } %>
<% } %>

<%- include('../partials/scripts.ejs') %>
<%- include('../partials/toast.ejs') %>
<%- include('delete-task.ejs') %>
<%- include('../partials/menu-connected-script.ejs') %>

<script>
  $(document).ready(function () {
    $('.collapsible').collapsible();
    $('.state-select').formSelect().change(function (){
      const taskId = this.getAttribute('_id')
      const state = this.options[this.selectedIndex].value;
      fetch('/projects/<%=project.id%>/tasks/' + taskId+'/state', {
        credentials: 'same-origin',
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
          'CSRF-Token': '<%=csrfToken%>'
        },
        body: JSON.stringify({
          state: state
        })
      })
      .then(result => {
        if(result.status === 200){
          $(`#${taskId} .state`).text(state);
        }
      });
    });
    
  });
</script>

<style>
  .description-header {
    white-space: nowrap;
    width: 300px;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: auto;
  }
</style>
