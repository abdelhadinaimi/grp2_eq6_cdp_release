<div id="addDocument" class="modal">
    <form action="/projects/<%=project.id%>/doc/add" method="post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="modal-content center-align">
            <div class="row">
                <div class="col s12">
                    <h5 class="center-align">Ajouter de la Documentation</h5>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m4 offset-m1 input-field">
                    <i class="material-icons prefix">update</i>
                    <input type="text" id="version" name="version" placeholder="v1.0" required>
                    <label for="version">Version</label>
                </div>
                <div class="col s12 offset-m2 m4 input-field">
                    <select name="type">
                        <option value="code">Code</option>
                        <option value="user">Utilisateur</option>
                        <option value="admin">Administrateur</option>
                    </select>
                    <label>Type de Documentation</label>
                </div>
                <div class="col s12 m8 offset-m2 file-field input-field">
                    <div class="btn black-text white">
                        <span>Doc</span>
                        <input name="doc" type="file" accept="application/pdf,application/zip" required>
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Format .zip ou .pdf" required>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a class="btn-flat red-text modal-close">Annuler</a>
            <button type="submit" class="btn-flat green-text">Valider</button>
        </div>
    </form>
</div>

<script>
  $(document).ready(function () {
    $('.modal').modal();
    $('select').formSelect();
  });
</script>